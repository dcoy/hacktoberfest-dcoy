import numpy as np
import matplotlib.pyplot as plt
%matplotlib inline
x=np.linspace(0,5,11)
y=x**2
#function based
plt.plot(x,y)
plt.xlabel('X Axis')
plt.ylabel('Y Axis')
plt.title("X vs Y")
plt.show()
#OOP
fig=plt.figure()
axes1=fig.add_axes([0.1,0.1,0.8,0.8])
axes2=fig.add_axes([0.2,0.5,0.4,0.3])
axes1.plot(x,y,'r')
axes2.plot(y,x,'b')
